@model LoginModel

@{ 
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <link href="~/lib/twitter-bootstrap/css/bootstrap.css" rel="stylesheet" />
    <title>Login</title>
</head>
<body>
    @if (TempData["LoginMessage"] != null) {
        <div class="form-control alert bg-danger alert-danger text-white alert-dismissible m-0 p-1" role="alert">
            <button type="button" class="close text-white m-0 p-0 pr-2" data-dismiss="alert"><span>&times;</span></button><strong>@TempData["LoginMessage"]</strong>
        </div>
        <br />
    }
    <form asp-action="Login" method="post">
        <input type="hidden" asp-for="ReturnUrl" />
        <div class="form-group">
            <input asp-for="Email" placeholder="Indtast Email" class="form-control" />
        </div>
        <div class="form-group">
            <input asp-for="Password" placeholder="Indtast Kodeord" class="form-control" type="password" />
        </div>
        <button class="btn" type="submit">Login</button>
    </form>
</body>
</html>